@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueces-te a password?";
}
<main id="main">
    <section>
        <div class="container">
            <h1>@ViewData["Title"]</h1>
            <h4>Indica o teu e-mail.</h4>

            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control formcontrolc3" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btnaccount">Enviar</button>
                    </form>
                </div>
            </div>
            </div>
        </section>
    </main>
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
