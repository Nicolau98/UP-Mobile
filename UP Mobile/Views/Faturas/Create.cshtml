@model UP_Mobile.Models.Fatura

@{
    ViewData["Title"] = "Criar Fatura";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Criar Fatura</h1>

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="IdContrato" class="control-label"></label>
                            <select asp-for="IdContrato" class="form-control" asp-items="ViewBag.IdContrato"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Data" class="control-label"></label>
                            <input asp-for="Data" class="form-control" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataLimitePagamento" class="control-label"></label>
                            <input asp-for="DataLimitePagamento" class="form-control" />
                            <span asp-validation-for="DataLimitePagamento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label"></label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PrecoTotal" class="control-label"></label>
                            <input asp-for="PrecoTotal" class="form-control" />
                            <span asp-validation-for="PrecoTotal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
