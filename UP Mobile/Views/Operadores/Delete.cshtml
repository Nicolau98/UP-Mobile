@model UP_Mobile.Models.Operador

@{
    ViewData["Title"] = "Delete";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Apagar Operador</h1>

            <h3>Tem a certeza que deseja apagar o operador nº @Html.DisplayFor(model => model.IdOperador) ?</h3>
            <div>
                <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome) 
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DataNascimento)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DataNascimento)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Morada)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Morada)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Contacto)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Contacto)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.LocalTrabalho)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LocalTrabalho)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdOperador" />
                        <input type="submit" value="Apagar" class="btn border" style="background-color: #55ecc3;" /> |
                        <a asp-action="Index" type="button" class="btn border" style="background-color: #55ecc3;">Cancelar e Voltar</a>
                    </form>
                
            </div>
        </div>
    </section>
</main>