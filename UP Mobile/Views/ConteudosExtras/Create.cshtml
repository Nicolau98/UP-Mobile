@model UP_Mobile.Models.ConteudoExtra

@{
    ViewData["Title"] = "Create";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Criar Conteúdo Extra</h1>

            <div class="card2 mb-4" >
                <div class="card2-body">
                    <div class="col-md">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group justify-content-between">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control formcontrolc3 " />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group justify-content-between">
                                <label asp-for="Descricao" class="control-label"></label>
                                <input asp-for="Descricao" class="form-control formcontrolc3 " />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="row justify-content-between">
                                <div class="col">
                                    <label asp-for="DataInicioComercializacao" class="control-label"></label>
                                    <input asp-for="DataInicioComercializacao" class="form-control formcontrolc3 " />
                                    <span asp-validation-for="DataInicioComercializacao" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="DataFimComercializacao" class="control-label "></label>
                                    <input asp-for="DataFimComercializacao" class="form-control formcontrolc3 " />
                                    <span asp-validation-for="DataFimComercializacao" class="text-danger"></span>
                                </div>

                                <div class="col">
                                    <label asp-for="Preco" class="control-label"></label>
                                    <input asp-for="Preco" class="form-control formcontrolc3 " />
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                </div>
                            </div>
                            <h1></h1>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                                </label>
                            </div>
                            <h1></h1>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn border" style="background-color: #55ecc3;" /> |
                                <a asp-action="Index" class="btn border" style="background-color: #55ecc3;">Cancelar e Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }

            </div>
    </section>
</main>