@model UP_Mobile.Models.ConteudoExtra

@{
    ViewData["Title"] = "Details";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Detalhes do conteudo @Html.DisplayFor(model => model.Nome)</h1>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DataInicioComercializacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DataInicioComercializacao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DataFimComercializacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DataFimComercializacao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Preco)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Preco)
                    </dd>
                </dl>
            </div>
            <div>
                
                <a asp-action="Edit" class="btn border" style="background-color: #55ecc3;" asp-route-id="@Model.IdConteudo">Editar </a> |
                <a asp-action="Index" class="btn border" style="background-color: #55ecc3;">Cancelar e Voltar</a>


            </div>

        </div>
    </section>
</main>