@model UP_Mobile.Models.ConteudoExtra

@{
    ViewData["Title"] = "Editar Extra";
}

<main id="main">
    <section>
        <div class="container">

            <h2>Editar</h2>

            <h4 class="mb-4">Conteúdo Extra <b>@Html.DisplayFor(model => model.Nome)</b></h4>

            <div class="card border border-info mb-4" style="background-color: #e3f2fd;">
                <div class="card-body">
                    <div class="col-md">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="IdConteudo" />
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label"></label>
                                <input asp-for="Descricao" class="form-control" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label asp-for="DataInicioComercializacao" class="control-label"></label>
                                    <input asp-for="DataInicioComercializacao" class="form-control" />
                                    <span asp-validation-for="DataInicioComercializacao" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="DataFimComercializacao" class="control-label"></label>
                                    <input asp-for="DataFimComercializacao" class="form-control" />
                                    <span asp-validation-for="DataFimComercializacao" class="text-danger"></span>
                                </div>

                                <div class="col">
                                    <label asp-for="Preco" class="control-label"></label>
                                    <input asp-for="Preco" class="form-control" />
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                </div>
                            </div>

                            <h1></h1>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn border" style="background-color: #55ecc3" /> |
                                <a asp-action="Index" ctype="button" class="btn border" style="background-color: #80f2f3">Cancelar e Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }

        </div>
    </section>
</main>