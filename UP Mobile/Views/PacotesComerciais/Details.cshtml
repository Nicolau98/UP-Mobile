@model UP_Mobile.Models.PacoteComercial

@{
    ViewData["Title"] = "Details";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Detalhes do pacote @Html.DisplayFor(model => model.Nome)</h1>

            <div>
                
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DataInicioComercializacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DataInicioComercializacao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DataFimComercializacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DataFimComercializacao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PrecoBase)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PrecoBase)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PeriodoFidelizacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PeriodoFidelizacao)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.IdPacote" class="btn border" style="background-color: #55ecc3;">Editar</a> |
                <a asp-action="Index" class="btn border" style="background-color: #55ecc3;">Voltar</a>
            </div>
        </div>
    </section>
</main>