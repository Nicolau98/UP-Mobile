@model UP_Mobile.Models.PacoteComercial

@{
    ViewData["Title"] = "Create";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Criar Pacote Comercial</h1>

            <div class="card2 mb-4">
                <div class="card2-body">
                    <div class="col-md">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group justify-content-between">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control formcontrolc3" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group justify-content-between">
                                <label asp-for="Descricao" class="control-label"></label>
                                <input asp-for="Descricao" class="form-control formcontrolc3" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="row justify-content-between">
                                <div class="col">
                                    <label asp-for="DataInicioComercializacao" class="control-label"></label>
                                    <input asp-for="DataInicioComercializacao" class="form-control formcontrolc3" />
                                    <span asp-validation-for="DataInicioComercializacao" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="DataFimComercializacao" class="control-label"></label>
                                    <input asp-for="DataFimComercializacao" class="form-control formcontrolc3" />
                                    <span asp-validation-for="DataFimComercializacao" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group justify-content-between">
                                <label asp-for="PrecoBase" class="control-label"></label>
                                <input asp-for="PrecoBase" class="form-control formcontrolc3" />
                                <span asp-validation-for="PrecoBase" class="text-danger"></span>
                            </div>
                            <div class="form-group justify-content-between">
                                <label asp-for="PeriodoFidelizacao" class="control-label"></label>
                                <input asp-for="PeriodoFidelizacao" class="form-control formcontrolc3" />
                                <span asp-validation-for="PeriodoFidelizacao" class="text-danger"></span>
                            </div>

                            <div class="row justify-content-between">
                                <div class="col">
                                    <label asp-for="Internet" class="control-label"></label>
                                    <input asp-for="Internet" class="form-control formcontrolc3" />
                                    <span asp-validation-for="Internet" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="Voz" class="control-label"></label>
                                    <input asp-for="Voz" class="form-control formcontrolc3" />
                                    <span asp-validation-for="Voz" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row justify-content-between">
                                <div class="col">
                                    <label asp-for="Tv" class="control-label"></label>
                                    <input asp-for="Tv" class="form-control formcontrolc3" />
                                    <span asp-validation-for="Tv" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="Movel" class="control-label"></label>
                                    <input asp-for="Movel" class="form-control formcontrolc3" />
                                    <span asp-validation-for="Movel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group justify-content-between form-check mt-3 mb-4 ml-2">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                                </label>
                            </div><div class="form-group  mt-3">
                                <input type="submit" value="Guardar" class="btn btnsearch" />
                                <a asp-action="Index" class="btn btnsearch">Cancelar e Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
