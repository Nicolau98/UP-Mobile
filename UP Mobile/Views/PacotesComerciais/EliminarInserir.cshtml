@model PacoteComercial

@{
    ViewData["Title"] = "Pacote Comercial eliminado";
}

<div class="card text-white bg-danger mb-3">
    <div class="card-body">
        <h5 class="card-title">Atenção</h5>
        <p class="card-text">O Pacote Comercial que estava a editar foi eliminado.</p>
    </div>
</div>

<h1>Adicionar novamente o Pacote Comercial?</h1>

<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicioComercializacao" class="control-label"></label>
                <input asp-for="DataInicioComercializacao" class="form-control" />
                <span asp-validation-for="DataInicioComercializacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFimComercializacao" class="control-label"></label>
                <input asp-for="DataFimComercializacao" class="form-control" />
                <span asp-validation-for="DataFimComercializacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoBase" class="control-label"></label>
                <input asp-for="PrecoBase" class="form-control" />
                <span asp-validation-for="PrecoBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodoFidelizacao" class="control-label"></label>
                <input asp-for="PeriodoFidelizacao" class="form-control" />
                <span asp-validation-for="PeriodoFidelizacao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Internet" class="control-label"></label>
                <input asp-for="Internet" class="form-control" />
                <span asp-validation-for="Internet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voz" class="control-label"></label>
                <input asp-for="Voz" class="form-control" />
                <span asp-validation-for="Voz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tv" class="control-label"></label>
                <input asp-for="Tv" class="form-control" />
                <span asp-validation-for="Tv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movel" class="control-label"></label>
                <input asp-for="Movel" class="form-control" />
                <span asp-validation-for="Movel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}