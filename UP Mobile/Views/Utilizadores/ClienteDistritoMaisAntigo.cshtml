
@model ListaMaisAntigosViewModel

@{
    ViewData["Title"] = "Clientes mais antigos por distrito";
}



<main id="main">
    <section>
        <div class="container">


            <h1>Top 10 Clientes mais antigos por distrito</h1>



            <div class="card border border-info mb-4" style="background-color: #e3f2fd;">
                <div class="card-body">
                    <h5 class="card-title">Pesquisa</h5>
                    <form asp-action="ClienteDistritoMaisAntigo" method="get">
                        <div class="form-group">
                            <label for="nomePesquisar" class="control-label">Distrito</label>
                            @*<input name="nomePesquisar" class="form-control mb-3" type="search" value="@Model.NomePesquisar" />*@
                            <select asp-for="@Model.DistritoPesquisar" class="form-control" type="search" asp-items="ViewBag.IdDistrito"></select>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Pesquisar" class="btn border" style="background-color: #55ecc3;" /> |
                            <a asp-action="ClienteDistritoMaisAntigo" class="btn border" style="background-color: #55ecc3;">Limpar</a>
                        </div>
                    </form>
                </div>
            </div>

            <table class="table table-bordered">
                <thead style="background-color: #e3f2fd;">
                    <tr>
                        <th scope="col">
                            @*@Html.DisplayNameFor(model => model.Utilizador[0].IdUtilizador)*@
                            Nº de Cliente
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Utilizador[0].Nome)
                        </th>

                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Utilizador[0].Contacto)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Utilizador[0].Email)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Utilizador[0].NContribuinte)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Utilizador[0].DataCriacao)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Utilizador[0].NIdentificacao)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Utilizador[0].Ativo)
                        </th>

                        <th scope="col">Ações Disponíveis</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Utilizador)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdUtilizador)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Contacto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NContribuinte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataCriacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NIdentificacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ativo)
                            </td>

                            <td>


                                <a asp-action="Details" asp-route-id="@item.IdUtilizador" type="button" class="btn border" style="background-color: #55ecc3;">Detalhes</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </section>
</main>