@model ListaUtilizadoresAreaClienteViewModel

@{
    ViewData["Title"] = "Área Pessoal";
}

<main id="main">
    <section>
        <div class="container">

            <h1 class="topo text-center mb-5" style="color:#55ecc3">Bem-Vindo à sua Área Pessoal @Html.DisplayFor(model => model.Utilizador.Nome)</h1>

            <div class="mb-2">
                <h3 class="mb-3">Dados Pessoais</h3>

                <table class="table table-hover" style="background-color:#a7e4df">
                    <tbody>
                        <tr>
                            <th scope="row" style="width: 30%">@Html.DisplayNameFor(model => model.Utilizador.Nome)</th>
                            <td>@Html.DisplayFor(model => model.Utilizador.Nome)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Utilizador.DataNascimento)</th>
                            <td>@Html.DisplayFor(model => model.Utilizador.DataNascimento)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Utilizador.Morada)</th>
                            <td>@Html.DisplayFor(model => model.Utilizador.Morada)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Utilizador.Contacto)</th>
                            <td>@Html.DisplayFor(model => model.Utilizador.Contacto)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Utilizador.Email)</th>
                            <td>@Html.DisplayFor(model => model.Utilizador.Email)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Utilizador.NContribuinte)</th>
                            <td>@Html.DisplayFor(model => model.Utilizador.NContribuinte)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Utilizador.NIdentificacao)</th>
                            <td>@Html.DisplayFor(model => model.Utilizador.NIdentificacao)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="mb-5">
                <a asp-action="Edit" asp-route-id="@Model.Utilizador.IdUtilizador" class="btn" style="background-color:#55ecc3">Editar Dados Pessoais</a>
            </div>

            <div class="mb-5">
                <h3 class="mb-3">Informações do(s) seu(s) contrato(s)</h3>

                @foreach (var item in Model.Contrato)
                {
            <div class="card mb-4">
                <div class="card-header" style="background-color:#82ddf2">
                    @Html.DisplayNameFor(modelItem => item.IdContrato)
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(modelItem => item.IdContrato)</p>
                </div>
                <div class="card-header">
                    @Html.DisplayNameFor(modelItem => item.IdCliente)
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(modelItem => item.IdCliente)</p>
                </div>
                <div class="card-header">
                    @Html.DisplayNameFor(modelItem => item.DataInicioContrato)
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(modelItem => item.DataInicioContrato)</p>
                </div>
                @*<div class="card-header">
                    @Html.DisplayNameFor(modelItem => item.DataFimContrato)
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(modelItem => item.DataFimContrato)</p>
                </div>*@
                <div class="card-header">
                    @Html.DisplayNameFor(modelItem => item.DataFidelizacao)
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(modelItem => item.DataFidelizacao)</p>
                </div>
                <div class="card-header">
                    @Html.DisplayNameFor(modelItem => item.MoradaFaturacao)
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(modelItem => item.MoradaFaturacao)</p>
                </div>
                <div class="card-header">
                    @Html.DisplayNameFor(modelItem => item.IdPacoteComercialPromocao)
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(modelItem => item.IdPacoteComercialPromocaoNavigation.Nome)</p>
                </div>
                <div class="card-header">
                    @Html.DisplayNameFor(modelItem => item.PrecoTotal)
                </div>
                <div class="card-body">
                    <p>@Html.DisplayFor(modelItem => item.PrecoTotal)</p>
                </div>
            </div>
                }

            </div>

                <h4>Password e E-mail</h4>
                <br />
                <div>

                    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn" style="background-color:#55ecc3">Alterar</a>

                </div>

            </div>
    </section>
</main>