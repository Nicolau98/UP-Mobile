@model ListaUtilizadoresAreaClienteViewModel

@{
    ViewData["Title"] = "Details";
}



<main id="main">
    <section>
        <div class="container">

            <h1>Privado</h1>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.DataNascimento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.DataNascimento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.Morada)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.Morada)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.Contacto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.Contacto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.NContribuinte)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.NContribuinte)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.NIdentificacao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.NIdentificacao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.Ativo)
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.Ativo
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.LocalTrabalho)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.LocalTrabalho)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Utilizador.IdRoleNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utilizador.IdRoleNavigation.Nome)
                </dd>
            </dl>

            <div>
                <a asp-action="Edit" asp-route-id="@Model.Utilizador.IdUtilizador" class="btn btn-primary">Editar</a>
                
            </div>
            
            <br />
            <div>

                <a asp-area="Identity" asp-page="/Account/Manage/Email" class="btn btn-primary">Confidenciais</a>
                
            </div>

            @foreach (var item in Model.Contrato)
            {
                <dl class="row">
                    <dt class="col-sm-2">
                        Nome
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelItem => item.IdCliente)
                    </dd>
                    <dt class="col-sm-2">
                        Outro Nome
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelItem => item.DataInicioContrato)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelItem => item.MoradaFaturacao)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelItem => item.PrecoTotal)
                    </dd>

                </dl>
            }

        </div>
    </section>
</main>