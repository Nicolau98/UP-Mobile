                                        <input asp-for="NIdentificacao" readonly class="form-control formcontrolc3" />
                                        <span asp-validation-for="NIdentificacao" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                                    </label>
                                </div>

                                @*<div class="form-group">
                                        <label asp-for="LocalTrabalho" class="control-label"></label>
                                        <input asp-for="LocalTrabalho" class="form-control" />
