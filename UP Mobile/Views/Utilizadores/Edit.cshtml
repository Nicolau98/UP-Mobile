@model UP_Mobile.Models.Utilizador

@{
    ViewData["Title"] = "Editar";
}

<main id="main">
    <section>
        <div class="container">
            @if ((User.IsInRole("Administrador")) || (User.IsInRole("Operador")))
            {
                <h1>Editar dados</h1>

                <div class="card2 mb-4" >
                    <div class="card2-body">
                        <div class="col-md">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdUtilizador" />
                                <div class="form-group justify-content-between">
                                    <label asp-for="Nome" class="control-label"></label>
                                    <input asp-for="Nome" class="form-control formcontrolc3" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="DataNascimento" class="control-label"></label>
                                        <input asp-for="DataNascimento" class="form-control formcontrolc3" />
                                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                    </div>
                                    </div>
                                    @*<div class="col">
                                        <input type="hidden" asp-for="DataCriacao" class="form-control formcontrolc3" />
                                        <span asp-validation-for="DataCriacao" class="text-danger"></span>
                                    </div>
                                </div>*@
