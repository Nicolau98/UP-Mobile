                                        <span asp-validation-for="IdDistrito" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Contacto" class="control-label"></label>
                                        <input asp-for="Contacto" class="form-control formcontrolc3" />
                                        <span asp-validation-for="Contacto" class="text-danger"></span>
                                    </div>
                                    <div class="col">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control formcontrolc3" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
