@model UP_Mobile.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar Cliente</h1>

<h3>Tem a certeza que deseja apagar o cliente nº @Html.DisplayFor(model => model.IdCliente) ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Morada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Morada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contacto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NContribuinte)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NContribuinte)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NIdentificacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NIdentificacao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Cancelar e Voltar</a>
    </form>
</div>
