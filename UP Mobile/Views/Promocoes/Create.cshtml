@model UP_Mobile.Models.Promocao

@{
    ViewData["Title"] = "Criar Promoção";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Criar uma Promoção</h1>

            <div class="card border border-info mb-4" style="background-color: #e3f2fd;">
                <div class="card-body">
                    <div class="col-md">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label"></label>
                                <textarea asp-for="Descricao" class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label asp-for="DataInicio" class="control-label"></label>
                                    <input asp-for="DataInicio" class="form-control" />
                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="DataFim" class="control-label"></label>
                                    <input asp-for="DataFim" class="form-control" />
                                    <span asp-validation-for="DataFim" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label asp-for="Preco" class="control-label"></label>
                                    <input asp-for="Preco" class="form-control" />
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                </div>

                                <div class="col">
                                    <label asp-for="Conteudo" class="control-label"></label>
                                    <input asp-for="Conteudo" class="form-control" />
                                    <span asp-validation-for="Conteudo" class="text-danger"></span>
                                </div>
                            </div>
                            <h1></h1>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn border" style="background-color: #55ecc3;"  />
                                <a asp-action="Index" class="btn border" style="background-color: #55ecc3;">Cancelar e Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }

            </div>
    </section>
</main>