@model UP_Mobile.Models.Promocao

@{
    ViewData["Title"] = "Edit";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Edit</h1>

            <h4>Promoção nº @Html.DisplayFor(model => model.IdPromocao)</h4>
            <hr />
            <div class="row">
                <div class="col-md">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdPromocao" />
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label"></label>
                            <textarea asp-for="Descricao" class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="DataInicio" class="control-label"></label>
                                <input asp-for="DataInicio" class="form-control" />
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataFim" class="control-label"></label>
                                <input asp-for="DataFim" class="form-control" />
                                <span asp-validation-for="DataFim" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Conteudo" class="control-label"></label>
                                <input asp-for="Conteudo" class="form-control" />
                                <span asp-validation-for="Conteudo" class="text-danger"></span>
                            </div>
                        </div>
                        <h1></h1>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-primary" /> |
                            <a asp-action="Index" class="btn btn-primary">Cancelar e Voltar</a>
                        </div>
                    </form>
                </div>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }

        </div>
    </section>
</main>