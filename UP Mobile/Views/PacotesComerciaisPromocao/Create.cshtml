@model UP_Mobile.Models.PacoteComercialPromocao

@{
    ViewData["Title"] = "Criar Pacote Promoção";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Criar Pacote Comercial Promoção</h1>

            <div class="row">
                <div class="col-md">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="IdPacote" class="control-label"></label>
                            <select asp-for="IdPacote" class="form-control" asp-items="ViewBag.IdPacote"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdPromocao" class="control-label"></label>
                            <select asp-for="IdPromocao" class="form-control" asp-items="ViewBag.IdPromocao"></select>
                        </div>

                        @*<div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>*@

                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn border" style="background-color: #55ecc3;" /> |
                            <a asp-action="Index" class="btn border" style="background-color: #80f2f3">Cancelar e Voltar</a>
                        </div>
                    </form>
                </div>
            </div>


            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }

        </div>
    </section>
</main>