@model IEnumerable<UP_Mobile.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Contratos</h1>


            <a onclick="history.go(-1)" class="btn btn-primary" style="background-color: #55ecc3;">Voltar</a>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DataInicioContrato)
                        </th>
                        @*<th>
                        @Html.DisplayNameFor(model => model.DataFimContrato)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MoradaFaturacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataFidelizacao)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PrecoBaseInicioContrato)
                    </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.PrecoTotal)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.IdClienteNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdOperadorNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdPacoteComercialPromocaoNavigation)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataInicioContrato)
                            </td>
                            @*<td>
                            @Html.DisplayFor(modelItem => item.DataFimContrato)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoradaFaturacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataFidelizacao)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoBaseInicioContrato)
                        </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.PrecoTotal)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.IdClienteNavigation.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdOperadorNavigation.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdPacoteComercialPromocaoNavigation.Nome)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.IdContrato" type="button" class="btn border" style="background-color: #55ecc3;">Detalhes</a>
                                <h1></h1>
                                <a asp-action="Edit" asp-route-id="@item.IdContrato" type="button" class="btn border" style="background-color: #55ecc3;">Editar Pacote / Promoção</a>
                                <h1></h1>
                                <a asp-action="Terminar" asp-route-id="@item.IdContrato" type="button" class="btn border" style="background-color: #55ecc3;">Terminar Contrato</a>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>