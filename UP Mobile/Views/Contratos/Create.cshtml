@model UP_Mobile.Models.Contrato

@{
    ViewData["Title"] = "Create";
}

<main id="main">
    <section>
        <div class="container">

            <h1>Criar</h1>

            <h4>Contrato</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="IdCliente" class="control-label"></label>
                            <input  asp-for="IdCliente" class="form-control" value="@ViewBag.IdCliente" readonly/>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdOperador" class="control-label"></label>
                            <input class="form-control" value="@ViewBag.Nomeoperador" readonly/>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdPacoteComercialPromocao" class="control-label"></label>
                            <select asp-for="IdPacoteComercialPromocao" class="form-control" asp-items="ViewBag.IdPacoteComercialPromocao"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataInicioContrato" class="control-label"></label>
                            <input asp-for="DataInicioContrato" class="form-control" />
                            <span asp-validation-for="DataInicioContrato" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataFimContrato" class="control-label"></label>
                            <input asp-for="DataFimContrato" class="form-control" />
                            <span asp-validation-for="DataFimContrato" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MoradaFaturacao" class="control-label"></label>
                            <input asp-for="MoradaFaturacao" class="form-control" />
                            <span asp-validation-for="MoradaFaturacao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataFidelizacao" class="control-label"></label>
                            <input asp-for="DataFidelizacao" class="form-control" />
                            <span asp-validation-for="DataFidelizacao" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                            <label asp-for="NomeCliente" class="control-label"></label>
                            <input asp-for="NomeCliente" class="form-control" />
                            <span asp-validation-for="NomeCliente" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NomeOperador" class="control-label"></label>
                            <input asp-for="NomeOperador" class="form-control" />
                            <span asp-validation-for="NomeOperador" class="text-danger"></span>
                        </div>*@
                        @*<div class="form-group">
                            <label asp-for="PrecoBaseInicioContrato" class="control-label"></label>
                            <input asp-for="PrecoBaseInicioContrato" class="form-control" />
                            <span asp-validation-for="PrecoBaseInicioContrato" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PrecoTotal" class="control-label"></label>
                            <input asp-for="PrecoTotal" class="form-control" />
                            <span asp-validation-for="PrecoTotal" class="text-danger"></span>
                        </div>*@
                        
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary"/>
                        <a onclick="history.go(-1)" class="btn btn-primary">Voltar</a>
                    </div>
                    </form>
                </div>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }

        </div>
    </section>
</main>